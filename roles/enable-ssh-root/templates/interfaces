# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto {{ ansible_default_ipv4.alias }}
iface {{ ansible_default_ipv4.alias }} inet manual

# Cloud network
auto {{ host_interface_bridge }}
iface {{ host_interface_bridge }} inet static
        address {{ ansible_default_ipv4.address }}
        netmask {{ ansible_default_ipv4.netmask }}
        network {{ ansible_default_ipv4.network }}
        gateway {{ ansible_default_ipv4.gateway }}
        # dns-* options are implemented by the resolvconf package, if installed
        dns-nameservers {{ host_dns1 }}
        dns-search {{ host_dns_domain }}
        bridge_ports {{ ansible_default_ipv4.alias }}
        bridge_fd 5
        bridge_stp off
        bridge_maxwait 1
